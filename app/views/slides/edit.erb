<div class="header">
  <div class="header-wrap">
    <div class="branding">
      <a href="/" class="navigate-home">Deck</a>
    </div>

    <div class="user-info">
      <%= current_user.email %>
    </div>
  </div>
</div>

<div class="wrap">
  <div class="paper">

  <!-- actual template here -->

  <h1 class="short-section-title sharing-with-buttons outside-slide"><%= deck.name %></h1>
  <span class="new-slide-button-wrapper">
    <a href="/decks/<%= deck.id %>" class="button icon approve big">Present</a>
    <a href="/decks/<%= deck.id %>/slides/new" class="button icon add big">Add slide</a>
  </span>

  <div class="edit-slide">
    <div class="preview slide">
      <%= slide.content_as_html %>
    </div>
    <div class="slide-edit-area">
      <% form_tag "/slides/#{slide.id}", :method => 'post' do %>
        <textarea class="content-area" name="content" rows="" cols=""><%= slide.content %></textarea>
        <div class="button-bar">
          <div class="close-button-wrapper">
            <a href="/decks/<%= deck.id %>/edit" class="button big">Close</a>
          </div>
          <div class="button-group preview-save-button-wrapper">
            <input type="submit" class="button big primary" value="Save">
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <% if deck.slides.empty? %>
    <div class="notice inline-notification">
      <p class="outside-slide">Make your first slide!</p>
      <p class="outside-slide"><a href="/decks/<%= deck.id %>/slides/new" class="button big">Create a slide</a></p>
    </div>
  <% else %>
    <%= erb 'slides/list', :locals => {:deck => deck} %>
  <% end %>

  <!-- end of template -->

  </div>
</div>

<div class="footer">
  <a href="http://www.twitter.com/notbrent">@notbrent</a>
  <span class="separator"></span>
  <a href="http://www.github.com/brentvatne/deck">view the source</a>
</div>
