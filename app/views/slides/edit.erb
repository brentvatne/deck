<h1 class="short-section-title"><%= deck.name %></h1>
<span class="new-slide-button-wrapper">
  <a href="/decks/<%= deck.id %>/slides/new" class="button icon add big">Add slide</a>
</span>

<div class="edit-slide">
  <div class="preview slide">
    <%= slide.content_as_html %>
  </div>
  <div class="slide-edit-area">
    <% form_tag "/slides/#{slide.id}", :method => 'post' do %>
      <textarea class="content-area" name="content" rows="" cols=""><%= slide.content %></textarea>
      <div class="button-bar">
        <div class="close-button-wrapper">
          <a href="/decks/<%= deck.id %>/edit" class="button big">Close</a>
        </div>
        <div class="button-group preview-save-button-wrapper">
          <input type="submit" class="button big primary" value="Save">
        </div>
      </div>
    <% end %>
  </div>
</div>

<% if deck.slides.empty? %>
  <div class="notice inline-notification">
    <p>Make your first slide!</p>
    <p><a href="/decks/<%= deck.id %>/slides/new" class="button big">Create a slide</a></p>
  </div>
<% else %>
  <%= erb 'slides/list', :locals => {:deck => deck} %>
<% end %>
